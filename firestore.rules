rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permettre la lecture publique des propriétés pour le site web public
    match /Rent_properties/{document} {
      allow read: if true;
      allow write: if request.auth != null; // Écriture seulement si authentifié
    }
    
    // Permettre la lecture publique des colocataires pour calculer l'occupation
    match /Rent_colocataires/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Autres collections - accès seulement si authentifié
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}